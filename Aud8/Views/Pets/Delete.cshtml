@model PetAdoptionCenter.Domain.Models.Pet

@{
    ViewData["Title"] = "Delete";
}

<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100%;">
    <h1>Are you sure you want to delete this pet?</h1>
    <form asp-action="Delete" style="display: flex; flex-direction: column; align-items: center;">
        <input type="hidden" asp-for="Id" />
        <div style="display: flex; gap: 10px;">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
        </div>
    </form>
</div>
